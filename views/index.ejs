<!DOCTYPE html>
<html>

<head>
  <title>Taco Recipes</title>
  <link rel="stylesheet" type="text/css" href="/styles/main.css">
</head>

<body>
  <h1>Taco Town 🌮</h1>

  <form action="/recipe" method="POST" class="buttons">
    <button type="submit" value="chicken" name="choice">🍗</button>
    <button type="submit" value="beef" name="choice">🥩</button>
    <button type="submit" value="fish" name="choice">🐟</button>
  </form>
  <div id="recipeContainer" class="hidden">
    <% if(locals.data) { %>
      <h2><%= meatChoice %> tacos:</h2>
      <h3>Ingredients:</h3>
      <ul id="ingredientsList">
        <% if(meatChoice == "chicken") { %>
          <% console.log(data); %>
          <li><%= data[0].name %>, <%= data[0].ingredients.protein.preparation %></li>
          <li><%= data[0].ingredients.salsa.name %>, <%= data[0].ingredients.salsa.spiciness %></li>
          <% data[0].ingredients.toppings.forEach(function(otherIng) { %>
            <li><%= otherIng.quantity %> of <%= otherIng.name %></li>
          <% }); %>
        <% } else if(meatChoice == "beef") { %>
          <li><%= data[1].name %>, <%= data[1].ingredients.protein.preparation %></li>
          <li><%= data[1].ingredients.salsa.name %>, <%= data[1].ingredients.salsa.spiciness %></li>
          <% data[1].ingredients.toppings.forEach(function(otherIng) { %>
            <li><%= otherIng.quantity %> of <%= otherIng.name %></li>
          <% }); %>
        <% } else if(meatChoice == "fish"){ %>
          <li><%= data[2].name %>, <%= data[2].ingredients.protein.preparation %></li>
          <li><%= data[2].ingredients.salsa.name %>, <%= data[2].ingredients.salsa.spiciness %></li>
          <% data[2].ingredients.toppings.forEach(function(otherIng) { %>
            <li><%= otherIng.quantity %> of <%= otherIng.name %></li>
          <% }); %>
        <% } %>
      </ul>
    <% } else { %>
      <h2>Pick your favorite taco ingredient 👆</h2>
    <% } %>
  </div>
</body>

</html>
